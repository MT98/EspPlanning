{% block body %}
{{ parent() }}

<h2>Liste des classes</h2>
    <hr>
   
    <br/>
   
    {% if classes is not empty %}     
    <table class="table table-hover table-bordered">
        {% for classe in classes %}
        <tr>
        
            {% if classe.level is not null and classe.level.cycle is not null and classe.level.cycle.department is not null %}
            <td> Département : {{classe.level.cycle.department.name}}</td>
            {% else %}
                <td> Département : Aucun (Probléme à signaler)</td>
            {% endif %}

            {% if classe.level is not null and classe.level.cycle is not null and classe.level.cycle.departmentOption is not null %}
                <td> Option : {{classe.level.cycle.departmentOption.name}}</td>
            {% else %}
                <td> Option : Aucune</td>
            {% endif %}

            {% if classe.level is not null and classe.level.cycle is not null %}
                <td> Cycle : {{classe.level.cycle.name}}</td>
            {% else %}
                <td> Cycle : Aucun (Probléme à signaler)</td>
            {% endif %}

            {% if classe.level is not null %}
                <td> Niveau : {{classe.level.name}}</td>
            {% else %}
                <td> Niveau : Aucun (Probléme à signaler)</td>
            {% endif %}

            <td> Nom : {{classe.name}}</td>
            <td class="text-center"> <a href="#" class="btn btn-default">Consulter </a> </td>
            <td class="text-center"> <a href="#" class="btn btn-warning">Modifier </a> </td>
            <td class="text-center"> <a href="#" class="btn btn-danger">Supprimer </a> </td>
        </tr>
        {% endfor %}
    </table>

    {% else %}  

            <p class="jumbotron">
                La liste est vide!
            </p>

    {% endif %}

{% endblock %}


