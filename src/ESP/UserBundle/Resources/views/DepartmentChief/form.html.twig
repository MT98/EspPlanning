


{# {{ form(form) }} #}



  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}
  
  {% if form.delete is defined %}
    <br>
    <div class="form-group">
    <div class="col-sm-10">
          
         <p>Voulez-vous vraiment relever le professeur <i> {{professor.name}} </i> de ses fonctions?</p>

         <br>
         <a href="{{path('esp_user_admin_departmentChief_delete')}}" class="btn btn-default">Retourner à la liste</a>
         {{ form_widget(form.delete, {'attr': {'class': 'btn btn-danger'}}) }}
    </div>
  </div>
  {% endif %}

  <br>

  {% if form.department is defined %}
  <div class="form-group">
    {{ form_label(form.department, "Département:", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.department) }}
    <div class="col-sm-10">
      {{ form_widget(form.department, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
  {% endif %}
    
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  
  {% if form.save is defined %}
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
          {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        
            {% if professor.departmentChief is not null and professor.departmentChief.department is not null %}
                <a href="{{path('esp_user_admin_departmentChief_update')}}" class="btn btn-default">Retourner à la liste</a>
            {% else %}
                <a href="{{path('esp_user_admin_departmentChief_create')}}" class="btn btn-default">Retourner à la liste</a>
            {% endif %}
    
   
    </div>
  </div>
  {% endif %}
  

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
















